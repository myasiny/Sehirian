<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MessageActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bg_headline"
            android:src="@drawable/bg_headline"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/center"
            android:layout_alignBottom="@+id/divider_top" />

        <ImageButton
            android:id="@+id/button_back"
            android:src="@drawable/icon_back"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10" />

        <TextView
            android:id = "@+id/txt_page"
            android:text = "@string/page_message"
            android:textSize = "@dimen/dp_20"
            android:textColor="@color/colorAccent"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_alignBottom="@+id/button_back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10" />

        <View
            android:id="@+id/divider_top"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:layout_below="@+id/button_back"
            android:layout_marginTop="@dimen/dp_10" />

        <View
            android:id="@+id/center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_from"
            android:text="@null"
            android:textSize="@dimen/dp_10"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@drawable/bg_body_g_d"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_5"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_top"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10" />

        <TextView
            android:id="@+id/txt_content"
            android:text="@null"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/bg_body_w_l"
            android:lineSpacingExtra="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_from"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10" />

        <Button
            android:id="@+id/button_reply"
            android:text="@string/button_reply"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_content"
            android:layout_alignLeft="@+id/txt_from"
            android:layout_alignRight="@+id/txt_from"
            android:layout_marginBottom="@dimen/dp_10" />

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_reply"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_10"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5486013930231502/2148218404" />

        <ProgressBar style="@style/Base.Widget.AppCompat.ProgressBar"
            android:id="@+id/progress"
            android:visibility="visible"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/adView" />
    </RelativeLayout>
</ScrollView>